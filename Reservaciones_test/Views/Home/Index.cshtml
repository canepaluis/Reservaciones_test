@model Reservaciones_test.ViewModels.ReservacionViewModel

    <div class="col-lg-12">
        <h1>Reservaciones</h1>
        <h5>Ingrese sus datos para hacer su reservación</h5>
    </div>

<form action="/Home/Details/" method="post">
    <div class="container form-group">
        <div class="form-group col-lg-12">
            <label for="formGroupExampleInput">Destino: </label>
            <select class="form-control" name="destino">
                @foreach (var destino in Model.ListaDestinos)
                {
                    <option id="destino">@destino.Nombre</option>
                }

            </select>
        </div>

        <div class="form-group col-lg-12">
            <label>Hotel: </label>
            <select class="form-control" name="hotel">

                @foreach (var hotel in Model.ListaHoteles)
                {
                    <option id="hotel">@hotel.Nombre</option>
                }


            </select>
        </div>

        <div class="form-group col-lg-12">
            <label>Fecha: </label>
            <input type="date" name="fecha" class="form-control" />
        </div>

        <div class="form-group col-lg-12">
            <label>Costo por habitación: </label>
            <select class="form-control" name="habitacion">
                @foreach (var habitacion in Model.ListaHabitaciones)
                {
                    <option id="habitacion">@habitacion.Precio</option>
                }


            </select>
        </div>

        <div class="form-group row col-lg-12 col-sm-12">
            <div class="col-lg-6 col-sm-12">
                <label>Adultos: </label>
                <select class="form-control " name="adultos">
                    @for (int i = 1; i <= 10; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
            </div>

            <div class="col-lg-6 col-sm-12">
                <label>Menores: </label>
                <select class="form-control " name="menores">
                    @for (int i = 1; i <= 10; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="col text-center">
                    <input type="submit" class="btn btn-primary" />
                </div>
            </div>
        </div>
        
    </div>

</form>
